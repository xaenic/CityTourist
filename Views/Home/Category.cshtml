@{
}


<div>
    <nav class="mb-2">
        <ul class="flex gap-4 font-medium md:space-x-10  justify-center py-8">
            <li>
                <a asp-action="Index" class="hover:text-stone-400">Home</a>
            </li>
            <li>
                <a asp-action="Sights" class="font-semibold text-yellow-700 underline underline-offset-8">Sights</a>
            </li>
            <li>
                <a href="#" class="md:hover:text-stone-400">Quick Guides</a>
            </li>
        </ul>
    </nav>

    <section class="mt-20 min-h-screen">

        <div class="flex flex-col items-center">
            <h1 class="text-center text-[5em]  xl:text-[10em] font-bold">@ViewBag.Category</h1>

        </div>
        <div class="mx-32 grid grid-cols-5">
            @foreach (var place in ViewBag.Places)
            {
                <a href="/home/PlaceView?id=@place.Id" class="relative block overflow-hidden w-60 h-60 rounded-[1em]">
                    <img src="@place.Images[0]" alt="" class="absolute inset-0 w-full h-full object-cover">
                    <span class="absolute bottom-4 left-0 text-white text-lg font-semibold ml-4 mb-4">@place.City.Name</span>
                    <span class="absolute bottom-2 left-0 text-white text-md line-clamp-1 ml-4">@place.Name</span>
                </a>
            }
        </div>
    </section>
</div>